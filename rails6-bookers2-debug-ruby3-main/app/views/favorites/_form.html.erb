<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), id: "favorite-btn-#{book.id}", class: 'text-danger',remote: true, method: :delete do %>
    ♥<%= book.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), id: "favorite-btn-#{book.id}", remote: true, method: :post do %>
    ♥<%= book.favorites.count %> いいね
  <% end %>
<% end %>