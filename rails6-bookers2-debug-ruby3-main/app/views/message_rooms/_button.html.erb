<% if current_user.has_message_room_with?(user) %>
  <%= link_to 'chatを始める', message_room_path(current_user.room_with(user)), class: 'btn btn-success btn-sm' %>
<% else %>
  <%= form_with url: message_rooms_path(current_user.room_with(user)), method: :post do |f| %>
    <%= f.hidden_field :user_id, value: user.id %>
    <%= f.submit 'chatを始める', class: 'btn btn-success btn-sm' %>
  <% end %>
<% end %>
