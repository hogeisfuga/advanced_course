<div id="book_comment_errors"></div>
<%= form_with model: [book, comment], local: false do |f|%>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit', class: 'btn btn-success' %>
  </div>
<% end %>