<div id='book_comments'>
  <% book.book_comments.each do |book_comment| %>
    <div id="book-comment-<%= book_comment.id %>" class='d-flex mt-3'>
      <div>
        <%= link_to(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"100x100" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </div>
      <div class='m-2'><%= book_comment.comment %></div>
      <div class='m-2'>
        <% if current_user.id == book_comment.user_id %>
          <%= link_to 'Destroy', book_book_comment_path(book, book_comment), remote: true, method: :delete, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>